#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_BME280.h>
#include <WiFi.h>
#include <PubSubClient.h>

// Defini칞칫es
#define Addr 0x76
#define SEALEVELPRESSURE_HPA (1013.25)
#define TRIGGER_PIN 12
#define ECHO_PIN 14
#define ALARME_PIN 27
#define SDA_PIN 21
#define SCL_PIN 22
#define MQ2_PIN 34
#define LIMIAR_MQ2 300
#define LIMIAR_ENCHENTE_CM 20

// Wi-Fi e MQTT
const char* ssid = "SEU_SSID";
const char* password = "SUA_SENHA";
const char* mqtt_server = "broker.hivemq.com";

// T칩picos MQTT
const char* topico_gas = "esp32/sensores/gas";
const char* topico_enchente = "esp32/sensores/enchente";
const char* topico_clima = "esp32/sensores/clima";

// Inst칙ncias
WiFiClient espClient;
PubSubClient client(espClient);
Adafruit_BME280 bme;

void connectWiFi() {
  Serial.print("Conectando ao Wi-Fi...");
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println(" conectado!");
}

void connectMQTT() {
  while (!client.connected()) {
    Serial.print("Conectando ao MQTT...");
    if (client.connect("ESP32Client")) {
      Serial.println(" conectado!");
    } else {
      Serial.print(" falha, rc=");
      Serial.println(client.state());
      delay(5000);
    }
  }
}

void setup() {
  Wire.begin(SDA_PIN, SCL_PIN);
  Serial.begin(115200);

  pinMode(ALARME_PIN, OUTPUT);
  pinMode(TRIGGER_PIN, OUTPUT);
  pinMode(ECHO_PIN, INPUT);

  connectWiFi();
  client.setServer(mqtt_server, 1883);

  if (!bme.begin(Addr)) {
    Serial.println("Erro ao iniciar BME280!");
    while (1);
  }

  Serial.println("Sistema iniciado.");
}

void loop() {
  if (!client.connected()) {
    connectMQTT();
  }
  client.loop();

  // Leitura do sensor de g치s (MQ-2)
  int gasValor = analogRead(MQ2_PIN);
  if (gasValor > LIMIAR_MQ2) {
    Serial.println("游뚿 G츼S DETECTADO! Valor alto do sensor MQ-2!");
    client.publish(topico_gas, "GAS DETECTADO");
  } else {
    client.publish(topico_gas, "Nivel normal");
  }

  // Leitura do BME280
  float temp = bme.readTemperature();
  float hum = bme.readHumidity();
  float pressao = bme.readPressure() / 100.0F;

  Serial.printf("Temp: %.2f 춿C | Umidade: %.2f %% | Press칚o: %.2f hPa\n", temp, hum, pressao);

  char payload_clima[100];
  snprintf(payload_clima, sizeof(payload_clima),
           "Temp: %.2f, Umid: %.2f, Press: %.2f",
           temp, hum, pressao);
  client.publish(topico_clima, payload_clima);

  // Leitura do sensor ultrass칪nico (n칤vel da 치gua)
  long duracao, distancia_cm;
  digitalWrite(TRIGGER_PIN, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIGGER_PIN, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIGGER_PIN, LOW);

  duracao = pulseIn(ECHO_PIN, HIGH, 25000);
  distancia_cm = duracao * 0.034 / 2;

  Serial.printf("Dist칙ncia da 치gua: %ld cm\n", distancia_cm);

  if (distancia_cm > 0 && distancia_cm < LIMIAR_ENCHENTE_CM) {
    Serial.println("游뚿 RISCO DE ENCHENTE!");
    digitalWrite(ALARME_PIN, HIGH);
    client.publish(topico_enchente, "RISCO DE ENCHENTE");
  } else {
    digitalWrite(ALARME_PIN, LOW);
    client.publish(topico_enchente, "Nivel normal");
  }

  delay(5000);
}
